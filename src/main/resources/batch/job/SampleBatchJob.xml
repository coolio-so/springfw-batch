<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		">

	<job id="SampleBatchJob" xmlns="http://www.springframework.org/schema/batch">
	    <step id="SampleBatchJob.step1">
			<tasklet ref="SampleBatchJob.step1Adapter"/>
	    </step>
	</job>
	<!-- 배치선언 -->
	<bean id="SampleBatchJob.step1Adapter" class="com.spring.batch.quartz.job.tasklet.SampleTask">
		<property name="chatDestroyService" ref="ChatDestroyService_bat"/>
	</bean>
	
	<!-- CustomChatManager 선언 -->
	<bean id="CustomChatManager" class="com.spring.batch.job.utils.CustomChatManager">
	</bean>
	
	<!-- Service 선언 -->
	<bean id="ChatDestroyService_bat" class="com.spring.batch.job.serviceImpl.ChatDestroyServiceImpl">
		<property name="chatDestroyDao" ref="ChatDestroyDAO_bat"/>
		<property name="customChatManager" ref="CustomChatManager"/>
	</bean>
	
	<!-- DAO 선언 -->
	
	<bean id="ChatDestroyDAO_bat" class="com.spring.batch.job.dao.ChatDestroyDAO">
	</bean>
	
	<util:properties id="properties" location="classpath:bmp/properties/conf_#{systemProperties['jboss.service.mode']}/Comm.properties" />
	
</beans>
